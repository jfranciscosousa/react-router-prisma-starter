{
  "private": true,
  "name": "remix-prisma-starter",
  "description": "A Remix starter with Prisma and Vercel",
  "license": "MIT",
  "scripts": {
    "start": "remix-serve build",
    "build": "NODE_ENV=production yarn build:css && remix build",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "dev": "NODE_ENV=development concurrently \"yarn dev:css\" \"remix dev\"",
    "dev:css": "postcss styles --base styles --dir app/styles -w",
    "postinstall": "remix setup node",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy && yarn db:generate",
    "db:gen:migration": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "lint": "yarn eslint \"**/*.{js,jsx,ts,tsx}\" --cache",
    "test": "dotenv -e .env.test -- bash -c 'yarn db:reset --force && yarn db:migrate && yarn build && playwright test'",
    "test:ci": "yarn db:migrate && playwright test",
    "ts-check": "tsc --project tsconfig.json --noEmit --skipLibCheck",
    "prepare": "husky install",
    "deploy": "yarn db:migrate && yarn build"
  },
  "dependencies": {
    "@prisma/client": "4.6.1",
    "@remix-run/react": "1.7.6",
    "@remix-run/serve": "1.7.6",
    "@remix-run/vercel": "1.7.6",
    "accept-language-parser": "^1.5.0",
    "argon2": "^0.30.2",
    "classnames": "^2.3.2",
    "daisyui": "^2.42.1",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-use": "^17.4.0",
    "remix": "1.7.6",
    "tailwindcss": "^3.2.4",
    "yup": "^0.32.11",
    "zustand": "^4.1.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@playwright-testing-library/test": "^4.5.0",
    "@playwright/test": "^1.28.1",
    "@remix-run/dev": "1.7.6",
    "@types/accept-language-parser": "^1.5.3",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-lodash": "^7.4.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "husky": ">=8.0.2",
    "lint-staged": ">=13.0.4",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.8.0",
    "prisma": "4.6.1",
    "typescript": "^4.9.3"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --cache --fix"
  }
}
