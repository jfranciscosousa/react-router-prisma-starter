{
  "private": true,
  "name": "remix-prisma-starter",
  "description": "A Remix starter with Prisma and Vercel",
  "license": "MIT",
  "scripts": {
    "start": "remix-serve build",
    "build": "NODE_ENV=production npm run build:css && remix build",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "dev": "NODE_ENV=development concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "postcss styles --base styles --dir app/styles -w",
    "postinstall": "remix setup node",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy && yarn db:generate",
    "db:gen:migration": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "lint": "yarn eslint \"**/*.{js,jsx,ts,tsx}\" --cache",
    "test": ". ./.envrc.test && yarn db:reset --force && yarn db:migrate && yarn build && playwright test",
    "test:ci": "yarn db:migrate && playwright test",
    "ts-check": "tsc --project tsconfig.json --noEmit --skipLibCheck",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "4.1.1",
    "@remix-run/react": "1.6.7",
    "@remix-run/serve": "1.6.7",
    "@remix-run/vercel": "1.6.7",
    "accept-language-parser": "^1.5.0",
    "argon2": "^0.28.7",
    "classnames": "^2.3.1",
    "daisyui": "^2.22.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-use": "^17.4.0",
    "remix": "1.6.7",
    "tailwindcss": "^3.1.8",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.24.2",
    "@remix-run/dev": "1.6.7",
    "@types/accept-language-parser": "^1.5.3",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.33.0",
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.3.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-lodash": "^7.4.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.6.0",
    "husky": ">=6",
    "lint-staged": ">=13.0.3",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.7.1",
    "prisma": "4.1.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --cache --fix"
  }
}
