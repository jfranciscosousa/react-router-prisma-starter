#!/bin/sh

# Build script for the React Router application
# This script builds the application for production

set -e  # Exit on error

# Load environment variables
ENV_FILE=.env . bin/load-env

echo "🔨 Building React Router application..."

# Drizzle uses TypeScript schema - no separate generation step required
pnpm react-router build

echo "✅ Build completed successfully!"
echo "📁 Build files are in: build/"