#!/bin/sh

# TypeScript type checking script
# This script generates React Router types and runs TypeScript compiler

set -e  # Exit on error

# Load environment variables
ENV_FILE=.env . bin/load-env

echo "🔍 Running TypeScript type checking..."

echo "🔄 Generating React Router types..."
pnpm react-router typegen

echo "🔍 Running TypeScript compiler..."
pnpm tsc --project tsconfig.json --noEmit --skipLibCheck

echo "✅ Type checking completed successfully!"